<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="ui.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_movieDatailFragment2"
            app:destination="@id/movieDatailFragment2" />
    </fragment>
    <fragment
        android:id="@+id/movieDatailFragment2"
        android:name="ui.MovieDatailFragment"
        android:label="MovieDatailFragment"
        tools:layout="@layout/fragment_detail_movie">
    <argument
        android:name="posterPath"
        app:argType="string"
        app:nullable="true" />
    <argument
        android:name="originalTitle"
        app:argType="string"
        app:nullable="true" />
    <argument
        android:name="voteAverage"
        app:argType="float"
        android:defaultValue="0" />
    <argument
        android:name="voteCount"
        app:argType="integer"
        android:defaultValue="0" />
    <argument
        android:name="overview"
        app:argType="string"
        app:nullable="true" />
    <argument
        android:name="id"
        app:argType="integer"
        android:defaultValue="0"/>
    </fragment>
</navigation>