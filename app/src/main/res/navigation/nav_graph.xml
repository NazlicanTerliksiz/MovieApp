<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homepageFragment">

    <fragment
        android:id="@+id/homepageFragment"
        android:name="ui.HomepageFragment"
        android:label="fragment_home_page"
        tools:layout="@layout/fragment_home_page" >
        <action
            android:id="@+id/action_homepageFragment_to_detailsMovieFragment"
            app:destination="@id/detailsMovieFragment" />
        <argument
            android:name="id"
            app:argType="integer"
            android:defaultValue="0" />
    </fragment>
    <fragment
        android:id="@+id/detailsMovieFragment"
        android:name="ui.MovieDatailsFragment"
        android:label="DetailsMovieFragment"
        tools:layout="@layout/fragment_details_movie">
        <action
            android:id="@+id/action_detailsMovieFragment_to_homepageFragment"
            app:destination="@id/homepageFragment" />
        <argument
            android:name="id"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="posterPath"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="originalTitle"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="voteCount"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="overview"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="voteAverage"
            app:argType="float"
            android:defaultValue="0" />

    </fragment>

</navigation>